<section id="beer-cards">
  <article class="beer-card">
    <figure class="beer-pour">
      <div id="container">
        <div class="pour"></div>
        <div id="beaker">
          <div id="beaker-borders">
            <div class="beer-foam">
              <div class="foam-1"></div>
              <div class="foam-2"></div>
              <div class="foam-3"></div>
              <div class="foam-4"></div>
              <div class="foam-5"></div>
              <div class="foam-6"></div>
            </div>

            <div id="liquid" class="srm-<%= @srm_avg %>">

              <div class="bubble bubble1"></div>
              <div class="bubble bubble2"></div>
              <div class="bubble bubble3"></div>
              <div class="bubble bubble4"></div>
              <div class="bubble bubble5"></div>
            </div>
          </div>
        </div>
      </div>
    </figure>
    <table class="beer-stats">
      <tr>
        <td class="label">
          Name
        </td>
        <td class="value beer-name">
          <%= @name %>
        </td>
      </tr>
      <tr>
        <td class="label">
          Style
        </td>
        <td class="value beer-style">
          <%= @style %>
        </td>
      </tr>
      <tr>
        <td class="label">
          IBU
        </td>
        <td class="value beer-ibu">
          <%= @ibu %>
        </td>
      </tr>
      <tr>
        <td class="label">
          ABV
        </td>
        <td class="value beer-abv">
          <%= @abv %>%
        </td>
      </tr>
    </table>
    <p class="beer-description">
      <%= @description %>
    </p>
  </article>
</section>
