<div class="row">
  <div class="col-lg-6">
    <% if @breweries.any? %>
    <h3>Here are the breweries in the database for Portland</h3>
      <ul>
        <% @breweries.each do |brewery| %>
          <li><a href="/brewery/<%= brewery.id() %>"><%= brewery.name() %></a></li>

        <% end %>
      </ul>
    <% else %>
      <h3>The database doesn't have any breweries</h3>
    <% end %>
  </div>
  <div class="col-lg-6">
    <div class="well bs-component">
      <form class="form-horizontal" action="/breweries" method="post">
        <fieldset>
          <legend>Add a brewery Here</legend>
          <div class="form-group">
            <label for="brewery_name" class="col-lg-3 control-label">brewery Name</label>
            <div class="col-lg-9">
              <input type="text" class="form-control" name="brewery_name" id="brewery_name" placeholder="name">
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-9 col-lg-offset-3">
              <button type="submit" class="btn btn-primary">Add brewery</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</div>
